---
import ParticipacionView from '../../../views/Participacion/index.astro';
import { type Locale } from '../../../i18n/i18n';
import { getHeaderColors } from '../../../config/headerColors';

export async function getStaticPaths() {
  const locales = ['es'];
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { currentLang: locale as Locale }
  }));
}

const { currentLang } = Astro.props;

// Set header color config for participacion page
const headerColorConfig = getHeaderColors('zibas-creators');
---

<ParticipacionView currentLang={currentLang} headerColorConfig={headerColorConfig} />
