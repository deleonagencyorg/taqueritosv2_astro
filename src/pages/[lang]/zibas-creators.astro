---
// src/pages/[lang]/zibas-creators.astro
import ZibasCreatorsView from '../../views/ZibasCreators/index.astro';
import { type Locale } from '../../i18n/i18n';
import { getHeaderColors } from '../../config/headerColors';

export async function getStaticPaths() {
  const locales = ['es'];
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { currentLang: locale as Locale }
  }));
}

const { currentLang } = Astro.props || { currentLang: 'es' };

// Solo permitir espa√±ol por ahora
if (currentLang !== 'es') {
  return Astro.redirect('/es/zibas-creators');
}

// Set header color config for zibas-creators page
const headerColorConfig = getHeaderColors('zibas-creators');
---

<ZibasCreatorsView currentLang={currentLang} headerColorConfig={headerColorConfig} />
