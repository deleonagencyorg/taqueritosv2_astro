  <main class="w-full flex flex-col items-center justify-center mt-0">
    <!-- Slider Section con VideoCarousel -->
    <div class="relative w-full overflow-hidden">
      <VideoCarousel 
        slides={slides} 
        height="100vh" 
        mobileHeight="300px" 
        showOverlay={true} 
      />
    </div>

    <section id="recipes" class="w-full py-12 !bg-[#180607]" transition:animate="slide">
      <div class="container mx-auto px-4 ">
        {recipesAssets.home?.title && (
          <div class="container mx-auto px-4 title mb-12">
            <p>
              {recipesAssets.home?.title}
            </p>
            {recipesAssets.home?.subtitle && (
              <p>
                {recipesAssets.home?.subtitle}
              </p>
            )}
          </div>
        )}
        <RecipesCarousel 
          title={recipesAssets.home?.title || 'DESCUBRE NUEVOS SABORES CON NUESTRAS'}
          subtitle={recipesAssets.home?.subtitle || 'DESCUBRE NUEVOS SABORES CON NUESTRAS'}
          textButton={recipesAssets.home?.view_more || 'Ver Todas'}
        />
      </div>
    </section>
    
    <!-- Sección de Productos Zibas -->
    {zibasProducts.length > 0 && (
      <section id="products" class="w-full py-4 pt-16 bg-[#180607]">
        <div class="container mx-auto px-4 title">
          {brandsAssets.home?.title && (
          <div >
            <p >
              {brandsAssets.home?.title}
            </p>
            {brandsAssets.home?.subtitle && (
              <p >
                {brandsAssets.home?.subtitle}
              </p>
            )}
          </div>
        )}
          <ProductsCarousel 
            products={products}
            color={'white'}
            autoplay={true}
            speed={4000}
            slidesPerView={3}
            spaceBetween={30}
            loop={true}
            className="max-w-7xl mx-auto mb-8"
          />
