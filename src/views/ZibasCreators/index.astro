---
// src/views/ZibasCreators/index.astro
import LazyImage from '../../components/common/LazyImage.astro';
import { t } from '../../i18n/i18n';
import type { Locale } from '../../i18n/i18n';
import { getLocale } from '../../i18n/i18n';
import MainLayout from '../../layouts/MainLayout.astro';
import { logos } from '../../config/assets';
import { LocalizedImage } from '../../components/common/LocalizedImage.astro';
import './styles.css';

// Import categories data
import categoriesEs from '../../locales/es/categories-zibas-creators.json';
import categoriesEn from '../../locales/en/categories-zibas-creators.json';

interface Props {
  currentLang: Locale;
  headerColorConfig?: any;
}

const { currentLang, headerColorConfig } = Astro.props;

// Get current locale if not provided
const locale = currentLang || getLocale();

// Get categories data based on locale
const categoriesData = locale === 'es' ? categoriesEs : categoriesEn;

// Meta information
const title = 'Ziba\'s Creators - Concurso de Creatividad';
const metaDescription = 'Participa en el concurso de creatividad de Ziba\'s. Sube tu contenido en video, baile, música, arte, memes e inteligencia artificial y gana premios increíbles.';
---

<MainLayout title={title} description={metaDescription} headerColors={headerColorConfig}>
      <!-- Hero Section - Orange -->
    <section id="hero" class="bg-[#fd6600] min-h-screen relative overflow-hidden">
      <!-- Background decorative bars -->
      <div class="absolute inset-0">
        <div class="absolute bg-[#fd6600] h-full left-0 rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-36 rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-72 rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[433px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[577px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[721px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[865px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[1009px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[1152px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
        <div class="absolute bg-[#fd6600] h-full left-[1296px] rounded-bl-[70px] rounded-br-[70px] w-[145px]"></div>
      </div>
      
      <!-- Main content -->
      <div class="relative z-10 flex items-center justify-center min-h-screen">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left Content -->
            <div class="text-white space-y-8 hero-content animate-fade-in-up">
              <h1 class="text-5xl md:text-7xl font-title font-bold leading-tight animate-fade-in-up animation-delay-200">
                BIENVENIDO A CASA, CREADOR.
              </h1>
              <p class="text-xl md:text-2xl leading-relaxed font-medium animate-fade-in-up animation-delay-400">
                AQUÍ PREMIAREMOS TU TALENTO EN VIDEO, BAILE, MÚSICA, ARTE, MEMES E INTELIGENCIA ARTIFICIAL.
              </p>
              <button class="bg-white text-[#fd6600] font-bold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 hover:bg-gray-100 animate-fade-in-up animation-delay-600 animate-bounce-subtle">
                REVISAR A LOS JURADOS
              </button>
            </div>
            
            <!-- Right Content - Ziba's Creators Image -->
            <div class="relative hero-graphic flex justify-center animate-fade-in-left">
              <div class="relative z-10 max-w-md lg:max-w-lg animate-float">
                <!-- Main Ziba's Creators Image -->
                <div class="relative">
                  <img 
                    src="https://snack.yummiespromociones.com/SnacksyummiesAssets/zibas-creators-hero.webp" 
                    alt="Ziba's Creators" 
                    class="w-full h-auto object-contain animate-fade-in-up animation-delay-300"
                  />
                  
                  <!-- Decorative elements -->
                  <div class="absolute -top-4 -left-4 bg-yellow-400 rounded-full p-3 animate-bounce animation-delay-800">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  
                  <div class="absolute -top-2 -right-2 bg-blue-500 rounded-full p-3 animate-pulse animation-delay-1000">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  
                  <div class="absolute bottom-2 -left-2 bg-pink-500 rounded-full p-3 animate-bounce animation-delay-1200">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Navigation indicators -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 flex items-center space-x-3">
        <div class="bg-white h-2 rounded-full w-16"></div>
        <div class="bg-white h-2 rounded-full w-6 opacity-45"></div>
        <div class="bg-white h-2 rounded-full w-6 opacity-45"></div>
      </div>
    </section>

    <!-- How to Participate Section - Blue -->
    <section id="how-to-participate" class="bg-blue py-20">
      <div class="container mx-auto px-4">
        <!-- Title Section -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-white text-4xl md:text-5xl font-title font-bold mb-4 leading-tight animate-fade-in-up animation-delay-200">
            DESCUBRE COMO PUEDES
          </h2>
          <h3 class="text-white text-6xl md:text-8xl font-title font-bold leading-tight animate-fade-in-up animation-delay-400">
            PARTICIPAR
          </h3>
        </div>
        
        <!-- Cards Grid -->
        <div class="relative max-w-7xl mx-auto">
          <!-- Top Row -->
          <div class="flex flex-col md:flex-row gap-8 mb-8">
            <!-- Step 1 -->
            <div class="bg-blue-700 rounded-[30px] p-10 flex flex-col gap-5 step-card animate-fade-in-up animation-delay-600">
              <h4 class="text-white text-2xl md:text-3xl font-title font-bold text-center leading-tight">
                REGÍSTRATE Y CREA TU CUENTA
              </h4>
              <div class="flex items-center gap-2 opacity-80">
                <div class="flex-1 h-0.5 bg-white"></div>
                <span class="text-white text-lg md:text-xl font-title font-bold uppercase whitespace-nowrap">
                  PASO Nº1
                </span>
                <div class="flex-1 h-0.5 bg-white"></div>
              </div>
            </div>
            
            <!-- Step 2 -->
            <div class="bg-blue-700 rounded-[30px] p-10 flex flex-col gap-5 step-card animate-fade-in-up animation-delay-800">
              <h4 class="text-white text-2xl md:text-3xl font-title font-bold text-center leading-tight">
                ELIGE CATEGORÍA Y SUBE TU MEJOR CONTENIDO
              </h4>
              <div class="flex items-center gap-2 opacity-80">
                <div class="flex-1 h-0.5 bg-white"></div>
                <span class="text-white text-lg md:text-xl font-title font-bold uppercase whitespace-nowrap">
                  PASO Nº2
                </span>
                <div class="flex-1 h-0.5 bg-white"></div>
              </div>
            </div>
            
            <!-- Step 3 -->
            <div class="bg-blue-700 rounded-[30px] p-10 flex flex-col gap-5 step-card animate-fade-in-up animation-delay-1000">
              <h4 class="text-white text-2xl md:text-3xl font-title font-bold text-center leading-tight">
                ESPERA A QUE PUEDAS SER JUZGADO
              </h4>
              <div class="flex items-center gap-2 opacity-80">
                <div class="flex-1 h-0.5 bg-white"></div>
                <span class="text-white text-lg md:text-xl font-title font-bold uppercase whitespace-nowrap">
                  PASO Nº3
                </span>
                <div class="flex-1 h-0.5 bg-white"></div>
              </div>
            </div>
          </div>
          
          <!-- Bottom Row - Single Card -->
          <div class="flex justify-center">
            <div class="bg-blue-700 rounded-[30px] p-10 flex flex-col gap-5 step-card max-w-md animate-fade-in-up animation-delay-1200">
              <h4 class="text-white text-2xl md:text-3xl font-title font-bold text-center leading-tight">
                ¡GANA PREMIOS COMO TABLETS, SMARTPHONES Y MÁS!
              </h4>
              <div class="flex items-center gap-2 opacity-80">
                <div class="flex-1 h-0.5 bg-white"></div>
                <span class="text-white text-lg md:text-xl font-title font-bold uppercase whitespace-nowrap">
                  PREMIO
                </span>
                <div class="flex-1 h-0.5 bg-white"></div>
              </div>
            </div>
          </div>
          
          <!-- Pixel Art Decoration -->
          <div class="absolute top-1/2 right-0 transform -translate-y-1/2 hidden lg:block">
            <div class="grid grid-cols-4 gap-1 pixel-art">
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
              <div class="w-8 h-8 bg-black rounded"></div>
              <div class="w-8 h-8 bg-black rounded"></div>
              <div class="w-8 h-8 bg-pink-500 rounded"></div>
              <div class="w-8 h-8 bg-green-500 rounded"></div>
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
              <div class="w-8 h-8 bg-orange-500 rounded"></div>
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
              <div class="w-8 h-8 bg-pink-500 rounded"></div>
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
              <div class="w-8 h-8 bg-green-500 rounded"></div>
              <div class="w-8 h-8 bg-orange-500 rounded"></div>
              <div class="w-8 h-8 bg-green-500 rounded"></div>
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
            </div>
          </div>
          
          <!-- Circular Face Image -->
          <div class="absolute bottom-8 left-8 hidden lg:block">
            <div class="bg-pink-500 rounded-full w-36 h-36 flex items-center justify-center">
              <div class="w-28 h-28 bg-gray-200 rounded-full flex items-center justify-center">
                <svg class="w-16 h-16 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Upload Content Section - Yellow -->
    <section id="upload" class="bg-yellow py-20">
      <div class="container mx-auto px-4">
        <!-- Title Section -->
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-[#5b3f2e] text-4xl md:text-5xl font-title font-bold mb-4 leading-tight animate-fade-in-up animation-delay-200">
            AQUÍ PUEDES SUBIR TU
          </h2>
          <h3 class="text-[#5b3f2e] text-6xl md:text-8xl font-title font-bold leading-tight animate-fade-in-up animation-delay-400">
            CONTENIDO
          </h3>
        </div>
        
        <!-- Checklist Items -->
        <div class="relative max-w-6xl mx-auto mb-16">
          <!-- Item 1 -->
          <div class="bg-[#f0dc1c] rounded-[162px] px-8 py-7 flex items-center gap-4 mb-4 checklist-item animate-fade-in-up animation-delay-600">
            <div class="w-10 h-10 flex items-center justify-center">
              <svg class="w-10 h-10 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <p class="text-[#5b3f2e] text-xl md:text-2xl font-medium flex-1">
              Se original, muéstranos algo único
            </p>
            <div class="w-9 h-9 flex items-center justify-center">
              <svg class="w-9 h-9 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
              </svg>
            </div>
          </div>
          
          <!-- Item 2 -->
          <div class="bg-[#f0dc1c] rounded-[162px] px-8 py-7 flex items-center gap-4 mb-4 checklist-item ml-16 md:ml-32 animate-fade-in-up animation-delay-800">
            <div class="w-10 h-10 flex items-center justify-center">
              <svg class="w-10 h-10 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <p class="text-[#5b3f2e] text-xl md:text-2xl font-medium flex-1">
              Asegúrate de que tu archivo cumpla con los requisitos
            </p>
            <div class="w-9 h-9 flex items-center justify-center">
              <svg class="w-9 h-9 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
              </svg>
            </div>
          </div>
          
          <!-- Item 3 -->
          <div class="bg-[#f0dc1c] rounded-[162px] px-8 py-7 flex items-center gap-4 checklist-item ml-32 md:ml-64 animate-fade-in-up animation-delay-1000">
            <div class="w-10 h-10 flex items-center justify-center">
              <svg class="w-10 h-10 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <p class="text-[#5b3f2e] text-xl md:text-2xl font-medium flex-1">
              Cuanto mas creativo, tendrás más posibilidades.
            </p>
            <div class="w-9 h-9 flex items-center justify-center">
              <svg class="w-9 h-9 text-[#5b3f2e]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
              </svg>
            </div>
          </div>
          
          <!-- Decorative Lines -->
          <div class="absolute top-1/4 left-1/4 transform rotate-[32deg] hidden lg:block">
            <div class="w-44 h-1 bg-[#5b3f2e] opacity-30"></div>
          </div>
          <div class="absolute bottom-1/4 right-1/4 transform rotate-[38deg] hidden lg:block">
            <div class="w-36 h-1 bg-[#5b3f2e] opacity-30"></div>
          </div>
        </div>
        
        <!-- Upload Button -->
        <div class="flex justify-center animate-fade-in-up animation-delay-1200">
          <div class="relative animate-bounce-subtle">
            <div class="bg-[#fde820] h-24 w-80 rounded-[200px] border-2 border-[#5b3f2e]"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-[#0167f7] h-16 w-72 rounded-[200px] flex items-center justify-center gap-4">
                <span class="text-white text-xl md:text-2xl font-semibold">
                  SUBIR CONTENIDO
                </span>
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8-8-8z"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Pixel Art Decoration -->
        <div class="absolute top-1/2 left-8 transform -translate-y-1/2 hidden lg:block">
          <div class="grid grid-cols-4 gap-1 pixel-art">
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
            <div class="w-7 h-7 bg-black rounded"></div>
            <div class="w-7 h-7 bg-black rounded"></div>
            <div class="w-7 h-7 bg-pink-500 rounded"></div>
            <div class="w-7 h-7 bg-green-500 rounded"></div>
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
            <div class="w-7 h-7 bg-orange-500 rounded"></div>
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
            <div class="w-7 h-7 bg-pink-500 rounded"></div>
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
            <div class="w-7 h-7 bg-green-500 rounded"></div>
            <div class="w-7 h-7 bg-orange-500 rounded"></div>
            <div class="w-7 h-7 bg-green-500 rounded"></div>
            <div class="w-7 h-7 bg-blue-500 rounded"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Section - Pink -->
    <section id="categories" class="bg-pink py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16 animate-fade-in-up">
          <h2 class="text-white text-3xl md:text-5xl font-bold mb-4 animate-fade-in-up animation-delay-200">
            DESCUBRE CADA UNA DE LAS
          </h2>
          <h3 class="text-white text-6xl md:text-8xl font-bold animate-fade-in-up animation-delay-400">
            CATEGORIAS
          </h3>
        </div>
        
        <div class="categories-container flex gap-5 items-center justify-center overflow-x-auto pb-4 max-w-7xl mx-auto">
          {categoriesData.categories.map((category, index) => (
            <div 
              class="category-card bg-white rounded-[30px] overflow-hidden shadow-lg transition-all duration-500 ease-in-out cursor-pointer group animate-fade-in-up"
              style={`animation-delay: ${0.6 + (index * 0.2)}s`}
              data-category-index={index}
            >
              <div class={`h-[300px] bg-gradient-to-br ${category.gradient} relative`}>
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                  {/* Category-specific icons */}
                  {category.id === 'audiovisual' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 6a2 2 0 012-2h6l2 2h6a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"></path>
                    </svg>
                  )}
                  {category.id === 'baile' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                    </svg>
                  )}
                  {category.id === 'musica' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.617.793L4.5 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.5l3.883-2.793a1 1 0 011.617.793zM12.293 7.293a1 1 0 011.414 0L15 8.586l1.293-1.293a1 1 0 111.414 1.414L16.414 10l1.293 1.293a1 1 0 01-1.414 1.414L15 11.414l-1.293 1.293a1 1 0 01-1.414-1.414L13.586 10l-1.293-1.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  )}
                  {category.id === 'arte' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                    </svg>
                  )}
                  {category.id === 'memes' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                  )}
                  {category.id === 'ia' && (
                    <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    </svg>
                  )}
                </div>
              </div>
              <div class="bg-pink-500 h-[163px] p-6 flex flex-col justify-center">
                <h4 class="text-white text-3xl md:text-4xl font-title font-bold mb-2 leading-tight">
                  {category.title}
                </h4>
                <p class="text-white text-lg md:text-xl font-medium opacity-90">
                  {category.description}
                </p>
                <p class="text-white text-sm md:text-base font-medium opacity-80 mt-1 hidden group-hover:block transition-all duration-300">
                  {category.subtitle}
                </p>
              </div>
              
              <!-- Expanded content on hover -->
              <div class="absolute inset-0 bg-pink-500 p-6 flex flex-col justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 pointer-events-none">
                <h4 class="text-white text-2xl md:text-3xl font-title font-bold mb-3 leading-tight">
